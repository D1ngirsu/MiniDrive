{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "FilesDb": "Server=(localdb)\\MSSQLLocalDB;Database=MiniDrive_Files;Trusted_Connection=True;TrustServerCertificate=True"
  },
  "Redis": {
    "ConnectionString": "localhost:6379,abortConnect=false,connectTimeout=5000",
    "KeyPrefix": "minidrive:files:",
    "DefaultTtl": "00:30:00"
  },
  "Storage": {
    "BasePath": "storage",
    "MaxFileSizeBytes": 104857600,
    "AllowedExtensions": []
  },
  "Services": {
    "Identity": "http://localhost:5001",
    "Quota": "http://localhost:5004",
    "Audit": "http://localhost:5005"
  }
}
