{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "IdentityDb": "Server=(localdb)\\MSSQLLocalDB;Database=MiniDrive_Identity;Trusted_Connection=True;TrustServerCertificate=True",
    "FilesDb": "Server=(localdb)\\MSSQLLocalDB;Database=MiniDrive_Files;Trusted_Connection=True;TrustServerCertificate=True",
    "FoldersDb": "Server=(localdb)\\MSSQLLocalDB;Database=MiniDrive_Folders;Trusted_Connection=True;TrustServerCertificate=True",
    "AuditDb": "Server=(localdb)\\MSSQLLocalDB;Database=MiniDrive_Audit;Trusted_Connection=True;TrustServerCertificate=True",
    "QuotaDb": "Server=(localdb)\\MSSQLLocalDB;Database=MiniDrive_Quota;Trusted_Connection=True;TrustServerCertificate=True"
  },
  "Redis": {
    "ConnectionString": "localhost:6379,abortConnect=false,connectTimeout=5000",
    "KeyPrefix": "minidrive:",
    "DefaultTtl": "00:30:00"
  },
  "Jwt": {
    "Issuer": "MiniDrive",
    "Audience": "MiniDriveClients",
    "SigningKey": "please-change-me-to-a-long-random-secret-key-32chars-min",
    "AccessTokenLifetime": "12:00:00",
    "RefreshTokenLifetime": "7.00:00:00"
  },
  "Storage": {
    "BasePath": "storage",
    "MaxFileSizeBytes": 104857600,
    "AllowedExtensions": []
  }
}
