{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "IdentityDb": "Server=(localdb)\\MSSQLLocalDB;Database=MiniDrive_Identity;Trusted_Connection=True;TrustServerCertificate=True"
  },
  "Redis": {
    "ConnectionString": "localhost:6379,abortConnect=false,connectTimeout=5000",
    "KeyPrefix": "minidrive:identity:",
    "DefaultTtl": "00:30:00"
  },
  "Jwt": {
    "Issuer": "MiniDrive",
    "Audience": "MiniDriveClients",
    "SigningKey": "please-change-me-to-a-long-random-secret-key-32chars-min",
    "AccessTokenLifetime": "12:00:00",
    "RefreshTokenLifetime": "7.00:00:00"
  }
}
