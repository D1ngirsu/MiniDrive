{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "identity-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/Auth/{**catch-all}"
        }
      },
      "files-route": {
        "ClusterId": "files-cluster",
        "Match": {
          "Path": "/api/File/{**catch-all}"
        }
      },
      "folders-route": {
        "ClusterId": "folders-cluster",
        "Match": {
          "Path": "/api/Folder/{**catch-all}"
        }
      },
      "quota-route": {
        "ClusterId": "quota-cluster",
        "Match": {
          "Path": "/api/Quota/{**catch-all}"
        }
      },
      "audit-route": {
        "ClusterId": "audit-cluster",
        "Match": {
          "Path": "/api/Audit/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5001/"
          }
        }
      },
      "files-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5002/"
          }
        }
      },
      "folders-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5003/"
          }
        }
      },
      "quota-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5004/"
          }
        }
      },
      "audit-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5005/"
          }
        }
      }
    }
  }
}
