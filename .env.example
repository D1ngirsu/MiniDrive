# MiniDrive Environment Configuration
# ===================================
# Copy this file to .env and fill in sensitive values
# Never commit the .env file to version control

# SQL Server SA Password
# WARNING: Must be at least 8 characters and contain uppercase, lowercase, number, and special character
SA_PASSWORD=YourStrong!Pass123

# CORS Allowed Origins (space-separated for development)
# In production, set specific domain(s) only
CORS_ALLOWED_ORIGINS=http://localhost:3000 http://localhost:3001

# API Gateway Port
GATEWAY_PORT=5000

# Service Ports
IDENTITY_SERVICE_PORT=5001
FILES_SERVICE_PORT=5002
FOLDERS_SERVICE_PORT=5003
QUOTA_SERVICE_PORT=5004
AUDIT_SERVICE_PORT=5005

# Database Connection Timeout (seconds)
DB_CONNECTION_TIMEOUT=30

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_ISSUER=minidrive
JWT_AUDIENCE=minidrive-app
JWT_SIGNING_KEY=your-very-long-secret-key-at-least-32-characters-long
JWT_EXPIRATION_MINUTES=60
